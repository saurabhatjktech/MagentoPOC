    <frontend>
        <routers>
            <clarion_customerattribute>
                <use>standard</use>
                <args>
                    <module>Clarion_Customerattribute</module>
                    <frontName>customerattribute</frontName>
                </args>
            </clarion_customerattribute>
        </routers>
