        <layout>
            <updates>
                <clarion_customerattribute>
                        <file>clarion_customerattribute.xml</file>
                </clarion_customerattribute>
            </updates>
            <updates>
                <profileimage>
                    <file>jktech/profileimage.xml</file>
                </profileimage>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <layout>
            <updates>
                <clarion_customerattribute>
                    <file>clarion_customerattribute.xml</file>
                </clarion_customerattribute>
            </updates>
        </layout>
    </adminhtml>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <clarion_customerattribute after="Mage_Adminhtml">Clarion_Customerattribute_Adminhtml</clarion_customerattribute>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <!-- Clarion_Customerattribute_Adminhtml indicates the path of the admin controller-->
    <default>
        <customer>
            <profileimage_widget>
                <enabled>0</enabled>
            </profileimage_widget>
        </customer>
        <general>
            <validator_data>
                <input_types>
                    <text>text</text>
                    <textarea>textarea</textarea>
                    <date>date</date>
                    <boolean>boolean</boolean>
                    <multiselect>multiselect</multiselect>
                    <select>select</select>
                    <image>image</image>
                </input_types>
            </validator_data>
        </general>
    </default>
