    <global>
        <models>
            <clarion_customerattribute>
                <class>Clarion_Customerattribute_Model</class>
            </clarion_customerattribute>
        </models>
        <helpers>
            <clarion_customerattribute>
                <class>Clarion_Customerattribute_Helper</class>
            </clarion_customerattribute>
        </helpers>
        <blocks>
            <clarion_customerattribute>
                <class>Clarion_Customerattribute_Block</class>
            </clarion_customerattribute>
        </blocks>

        <resources>
            <profileimage_setup>
                <setup>
                    <module>Clarion_Customerattribute</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </profileimage_setup>
            <profileimage_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </profileimage_write>
            <profileimage_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </profileimage_read>
        </resources>
