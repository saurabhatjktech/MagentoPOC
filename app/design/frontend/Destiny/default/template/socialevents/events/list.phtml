<div id="events_list_messages"><?php echo $this->getMessagesBlock()->getGroupedHtml() ?></div>
<div class="page-title">
    <h1><?php echo Mage::helper('social_events')->__('Social Events') ?></h1>
</div>

<div class="events_list_view">
    <?php foreach ($this->getCollection() as $eventsItem): ?>
        <div id="item_<?php echo $eventsItem->getId() ?>" class="page-title">
            <h2>
                <a href="<?php echo $this->getItemUrl($eventsItem) ?>">
                    <?php echo $this->escapeHtml($eventsItem->getTitle()) ?>
                </a>
            </h2>

            <?php if ($imageUrl = $this->getImageUrl($eventsItem, 300)): ?>
               <p><img src="<?php echo $imageUrl ?>" alt="<?php echo $this->escapeHtml($eventsItem->getTitle()); ?>" /></p>
            <?php endif; ?>
            <p><br></p>
            <div class="events_item_subtitle">
                <?php echo "Category : ". $this->escapeHtml($eventsItem->getCategory());?>
                <?php echo "<br/>Schedule : From ". $this->formatDate($eventsItem->getTimePublished(), Mage_Core_Model_Locale::FORMAT_TYPE_SHORT) . ' Till ' . $this->formatDate($eventsItem->getEndDate(), Mage_Core_Model_Locale::FORMAT_TYPE_SHORT) ?>
                <?php echo "<br/>Venue : ". $this->escapeHtml($eventsItem->getVenue());?>
            </div>
            <p><br></p>

        </div>
    <?php endforeach; ?>
</div>

<?php echo $this->getPager() ?>
